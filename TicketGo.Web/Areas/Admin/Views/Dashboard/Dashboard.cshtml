@model TicketGo.Application.DTOs.DashboardStatsDto

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Dashboard";
}

<div class="w-full -mx-4 sm:-mx-6 lg:-mx-8 px-6 sm:px-8 lg:px-12 py-8">
    <h1 class="text-3xl font-bold text-gray-800 dark:text-white mb-6">Dashboard Thống Kê</h1>

    <!-- Stats Cards - 5 Cards in One Row (Responsive) -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4 mb-8">
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-5 border-l-4 border-lime-400">
            <div class="flex items-center justify-between">
                <div class="flex-1">
                    <p class="text-gray-600 dark:text-gray-400 text-xs font-medium mb-1">Tổng Đơn Hàng</p>
                    <p class="text-2xl font-bold text-gray-800 dark:text-white">@Model.TotalOrders</p>
                </div>
                <div class="bg-lime-100 dark:bg-lime-900 rounded-full p-2.5 ml-2">
                    <svg class="w-5 h-5 text-lime-600 dark:text-lime-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                </div>
            </div>
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-5 border-l-4 border-blue-400">
            <div class="flex items-center justify-between">
                <div class="flex-1">
                    <p class="text-gray-600 dark:text-gray-400 text-xs font-medium mb-1">Tổng Doanh Thu</p>
                    <p class="text-xl font-bold text-gray-800 dark:text-white leading-tight">@Model.TotalRevenue.ToString("N0") đ</p>
                </div>
                <div class="bg-blue-100 dark:bg-blue-900 rounded-full p-2.5 ml-2">
                    <svg class="w-5 h-5 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
            </div>
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-5 border-l-4 border-purple-400">
            <div class="flex items-center justify-between">
                <div class="flex-1">
                    <p class="text-gray-600 dark:text-gray-400 text-xs font-medium mb-1">Tổng Vé</p>
                    <p class="text-2xl font-bold text-gray-800 dark:text-white">@Model.TotalTickets</p>
                </div>
                <div class="bg-purple-100 dark:bg-purple-900 rounded-full p-2.5 ml-2">
                    <svg class="w-5 h-5 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"></path>
                    </svg>
                </div>
            </div>
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-5 border-l-4 border-yellow-400">
            <div class="flex items-center justify-between">
                <div class="flex-1">
                    <p class="text-gray-600 dark:text-gray-400 text-xs font-medium mb-1">Tổng Chuyến Xe</p>
                    <p class="text-2xl font-bold text-gray-800 dark:text-white">@Model.TotalTrains</p>
                </div>
                <div class="bg-yellow-100 dark:bg-yellow-900 rounded-full p-2.5 ml-2">
                    <svg class="w-5 h-5 text-yellow-600 dark:text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"></path>
                    </svg>
                </div>
            </div>
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-5 border-l-4 border-red-400">
            <div class="flex items-center justify-between">
                <div class="flex-1">
                    <p class="text-gray-600 dark:text-gray-400 text-xs font-medium mb-1">Tổng Tài Khoản</p>
                    <p class="text-2xl font-bold text-gray-800 dark:text-white">@Model.TotalAccounts</p>
                </div>
                <div class="bg-red-100 dark:bg-red-900 rounded-full p-2.5 ml-2">
                    <svg class="w-5 h-5 text-red-600 dark:text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                    </svg>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts - Below Stats Cards -->
    <div class="mt-6 grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Revenue Chart -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6">
            <h2 class="text-xl font-bold text-gray-800 dark:text-white mb-4">Doanh Thu Theo Tháng</h2>
            <div class="h-80">
                <canvas id="revenueChart"></canvas>
            </div>
        </div>

        <!-- Orders Status Chart -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6">
            <h2 class="text-xl font-bold text-gray-800 dark:text-white mb-4">Trạng Thái Đơn Hàng</h2>
            <div class="h-80">
                <canvas id="ordersChart"></canvas>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        // Revenue Chart
        const revenueCtx = document.getElementById('revenueChart').getContext('2d');
        const revenueData = @Html.Raw(Json.Serialize(Model.RevenueByMonth.Select(r => r.Month).ToList()));
        const revenueValues = @Html.Raw(Json.Serialize(Model.RevenueByMonth.Select(r => r.Revenue).ToList()));

        new Chart(revenueCtx, {
            type: 'line',
            data: {
                labels: revenueData,
                datasets: [{
                    label: 'Doanh Thu (VNĐ)',
                    data: revenueValues,
                    borderColor: 'rgb(132, 204, 22)',
                    backgroundColor: 'rgba(132, 204, 22, 0.1)',
                    tension: 0.4,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: true,
                        position: 'top'
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) {
                                return value.toLocaleString('vi-VN') + ' đ';
                            }
                        }
                    }
                }
            }
        });

        // Orders Status Chart
        const ordersCtx = document.getElementById('ordersChart').getContext('2d');
        const ordersLabels = @Html.Raw(Json.Serialize(Model.OrdersByStatus.Select(o => o.Status).ToList()));
        const ordersCounts = @Html.Raw(Json.Serialize(Model.OrdersByStatus.Select(o => o.Count).ToList()));

        new Chart(ordersCtx, {
            type: 'doughnut',
            data: {
                labels: ordersLabels,
                datasets: [{
                    data: ordersCounts,
                    backgroundColor: [
                        'rgba(132, 204, 22, 0.8)',
                        'rgba(59, 130, 246, 0.8)',
                        'rgba(168, 85, 247, 0.8)',
                        'rgba(251, 191, 36, 0.8)'
                    ],
                    borderColor: [
                        'rgb(132, 204, 22)',
                        'rgb(59, 130, 246)',
                        'rgb(168, 85, 247)',
                        'rgb(251, 191, 36)'
                    ],
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: true,
                        position: 'bottom'
                    }
                }
            }
        });
    </script>
}
